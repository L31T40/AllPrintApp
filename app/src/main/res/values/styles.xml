<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="colorPrimary">@color/colorYellowDark</item>
        <item name="colorPrimaryDark">@color/colorDarkText</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>

        <!-- Navigation Drawer -->
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/colorWhiteBG</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_gradient_orange_black</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation Drawer -->
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/colorWhiteBG</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/bg_gradient_orange_black</item>
        <item name="background">@android:color/black</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.BottomAppBar.Primary" parent="Widget.AppCompat.Toolbar" tools:ignore="PrivateResource">
        <item name="android:background">@drawable/bg_gradient_orange_black</item>
        <item name="background">@android:color/black</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="ToolbarTitleTheme">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

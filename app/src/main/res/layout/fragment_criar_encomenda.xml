                        android:textAlignment="viewStart"
                        android:textColor="#8C8383"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:paddingStart="2dp"
                        android:paddingLeft="2dp"
                        android:paddingEnd="2dp"
                        android:paddingRight="2dp">

                        <EditText
                            android:id="@+id/TextView_email_cliente"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="textStart"
                            android:textSize="16sp"
                            tools:text="Telefone Cliente" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_Encomenda"
                android:layout_width="227dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_login_btn"
                android:drawableEnd="@drawable/ic_seta2"
                android:padding="5dp"
                android:text="ENCOMENDAR"
                android:textColor="@color/colorWhiteBG"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>
